.slider
	width: 958px
	height: 348px
	border: item-border
	overflow: hidden
	position: relative
	& a:hover img
		opacity: 1
	& .slider-wrap
		width: 960px
		height: 350px
		top: -1px
		left: -1px
		position: relative
		overflow: hidden
		& ul
			& li
				width: 960px
				height: 350px
				overflow: hidden
				float: left
				& img
					width: 960px
	& .slider-dots
		position: absolute
		bottom: 5px
		& li
			width: 15px
			height: 15px
			float: left
			background: #FFF
			margin: 0 5px
			cursor: pointer
			border: item-border
			&.active
				background: #2ECB70

