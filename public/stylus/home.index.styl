#home-offer-inner
	border: item-border
	width: 698px
	height: 358px

.home-offer-highlight
	width: 310px
	height: 340px
	border: item-border
	margin: 8px 0 8px 8px
	float: left
	overflow: hidden
	background: #F2F2F2
	& .img-box
		width: 312px
		height: 141px 
		overflow: hidden
		border-bottom: item-border
		top: -1px
		left: -1px
		position: relative
		& img
			width: 312px
	& .content-box
		height: 167px
		& .content-box-inner
			height: 116px
		& h3
			font-size: 26px
			max-height: 2em
			line-height: 1em
			overflow: hidden
			margin: 0 9px
			text-transform: uppercase
		& p
			font-size: 16px
			margin: 0 8px
			max-height: 4em
			overflow: hidden
		& a
			display: inline-block
			width: 141px
			height: 34px
			background-image: url('../images/offer-button.png')
			&.joys-offer
				background-position: 0 -60px
				margin: 8px 0 8px 8px
				float: left
				&:hover
					background-position: 0 -94px
			&.more-detail
				background-position: -141px -60px
				margin: 8px 8px 8px 12px
				float: left
				&:hover
					background-position: -141px -94px
	& .footer-box
		border-top: item-border
		color: #999
		font-size: 13px
		& div
			height: 30px
			float: left
			width: 102px
			text-align: center
			line-height: 30px
			&:hover
				color: #666
				& .fa-facebook
					color: #32549C
			&:not(:last-child)
				border-right: item-border


.home-offer-list
	width: 378px
	height: 342px
	margin: 8px 0
	float: left
	& li
		width: 172px
		height: 104px
		border: item-border
		background: #F2F2F2
		float: left
		margin: 0 0 12px 10px
		overflow: hidden
		& h3
			font-size: 18px
			height: 0.9em
			line-height: 1.2em
			overflow: hidden
			text-transform: uppercase
			padding: 2px 8px 3px 8px
		& .img-box
			width: 174px
			height: 78px 
			overflow: hidden
			border-bottom: item-border
			top: -1px
			left: -1px
			position: relative
			& img
				width: 174px

