#home-job
	height: 460px
	margin-top: 9px
	& .show-all
		margin-top: 8px
	& > ul
		position: relative
		& > li
			float: left
			& h2
				width: 122px
				height: 33px
				text-align: center
				color: #FFF
				background: #333
				line-height: 35px
				margin-right: 2px
				cursor: pointer
			& > div
				border: item-border
				position: absolute
				top: 33px
				left: 0px
				width: 958px
				height: 393px
				& > ul > li
					float: left
					height: 130px
					width: 479px
					& ~ li ~ li
						border-top: item-border
					& .home-job-logo
						width: 113px
						height: 66px
						border: item-border
						overflow: hidden
						margin: 20px 10px
						& img
							width: 115px
							top: -1px
							left: -1px
							position: relative
					& .home-job-detail
						margin: 23px 0
						width: 334px
			&:not(.active)
				& h2
					background: #999
				& div
					display: none

