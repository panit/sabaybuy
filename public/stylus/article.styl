#article-update
	font-size: 18px
	abbr
		font-size: 16px
		color: #b02417

.article-section-head
	h2
		font-size: 18px
		color: #FFF
		background: #333
		padding: 7px 12px
	.show-all
		margin-top: 5px
		font-size: 13px
		padding: 3px 12px

.article-section-body
	border: item-border
	margin-bottom: 20px
	.pad-20
		padding: 20px 20px 0 20px

.article-poster-prev, .article-poster-next
	width: 35px
	height: 212px
	text-align: center
	float: left
	font-family: oswaldbook
	font-size: 43px
	color: #999
	cursor: pointer
	line-height: 205px
	&:hover
		color: #666

.article-poster
	margin: 20px 0

.article-poster-wrap
	width: 628px
	height: 212px
	overflow: hidden
	float: left
	ul
		height: 212px
		width: 999999999px
		li
			float: left
			margin-right: 20px
			img
				border: item-border
				width: 140px

.article-title-700
	li
		padding-bottom: 20px
		border-bottom: item-border
		margin: 20px 0
		span
			display: inline-block
			width: 570px
			overflow: hidden
			text-overflow: ellipsis
			white-space: nowrap
			vertical-align: top
		abbr
			display: inline-block
			width: 125px
			text-align: right

.article-title-206
	margin: 20px 0 0 20px
	&:last-child
		margin-right: 20px
	li
		padding-bottom: 10px
		border-bottom: item-border
		&:first-child, &:last-child
			border-bottom: none
			padding-bottom: 15px
		img
			border: item-border
		span
			display: block
			width: 206px
			max-height: 2.2em
			line-height: 1.2em
			overflow: hidden
			margin-top: 10px		
			

.article-thumb-200
	li
		float: left
		height: 290px
		&:nth-child(3n+2)
			margin: 0 29px
		.thumb
			width: 198px
			height: 198px
			border: item-border
			overflow: hidden
			position: relative
			img
				width: 200px
				position: relative
				top: -1px
				left: -1px
		span
			display: block
			width: 200px
			max-height: 2.2em
			line-height: 1.2em
			overflow: hidden
			margin-top: 10px
		abbr
			display: block
			margin: 5px 0 20px 0

.article-thumb-60-90
	margin: 0 20px 20px 20px		
	li
		float: left
		width: 320px
		height:100px
		& ~ li ~ li
			padding-top: 20px
			margin-top: 10px
			border-top: item-border
		&:nth-child(2n+2)
			margin-left: 18px		
		.thumb
			float: left
			width: 60px
			height: 90px
			border: item-border
			overflow: hidden
			margin-right: 10px
			img
				width: 60px
		.title
			display: block
			float: left
			width: 210px
			max-height: 2.2em
			line-height: 1.2em
			overflow: hidden
		.sub-title
			display: block
			float: left
			width: 210px
			max-height: 1.2em
			line-height: 1.2em
			overflow: hidden
			color: #999
		abbr
			display: block
			float: left
			width: 210px
			margin-top: 10px

