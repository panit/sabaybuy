item-border = 1px solid #E9E9E9
// item-border = 1px solid #000

body
	min-width: 1000px
	font-size: 12px
	font-family: supermarketregular
a
	text-decoration: none
	&:hover
		.text-link
			text-decoration: underline
		img
			opacity: 0.5

mark
	background: none

h1, h2
	font-family: oswaldbook
	text-transform: uppercase

h1, h2, h3
	margin: 0
	font-weight: normal

h2
	& mark
		color: #2DCC70	

h3
	& mark
		color: #E84C3D

.unstyled
	list-style: none
	padding: 0
	margin: 0

.container 
	width: 960px
	margin: 0 auto

.error
	color: #D61C1D
	text-transform: uppercase

.facebook
	background: #32549C !important
	
a:hover .facebook, .facebook:hover
	background: #28437B !important

.green-btn
	background: #2BCB73 !important
	&:hover
		background: #28B161 !important

.btn
	-webkit-appearance: none
	-webkit-border-radius: 0
	display: inline-block
	color: #FFF 
	font-family: oswaldbook
	font-size: 14px
	text-transform: uppercase
	background: #333
	border: none;
	padding: 5px 10px 5px 10px
	line-height: normal
	cursor: pointer
	.fa
		font-size: 20px

	&:hover
		color: #FFF
		background: #111

.btn-share
	cursor: pointer

.gray-text
	color: #999

ul.pagination
	@extend .unstyled
	font-size: 14px
	font-family: oswaldbook
	text-align: center
	& li
		display: inline-block
		margin: 0 0.5em
		width: 28px
		height: 28px
		line-height: 28px
		text-align: center
		&:first-child, &:last-child
			font-size: 16px
			line-height: 26px
		& a
			display: inline-block
			width: 28px
			height: 28px
			&:hover
				background: #999
				color: #FFF
		&.active

			color: #FFF
			background: #2dcc6f
		&.disabled

			color: #999

#main-container
	margin: 10px auto
	min-height: 440px
	& .banner-half
		width: 338px
		height: 338px
		border: item-border
		overflow: hidden
		position: relative
		margin-bottom: 20px
		& img
			width: 340px
			top: -1px
			left: -1px
			position: relative		
	& .banner-small
		width: 958px
		height: 70px
		border: item-border
		overflow: hidden
		position: relative
		margin-bottom: 20px
		& img
			width: 960px
			top: -1px
			left: -1px
			position: relative
	& .banner-medium
		width: 958px
		height: 198px
		border: item-border
		overflow: hidden
		position: relative
		margin-bottom: 20px
		& img
			width: 960px
			top: -1px
			left: -1px
			position: relative		
	& .box
		border: item-border
		overflow: hidden	
		& > h1
			padding: 6px 15px
			background: #EDEDED
			border-bottom: item-border
			color: #333
			font-size: 18px
		& > div
			padding: 10px 15px
	& .box-480
		width: 478px;
	& form
		& > div
			margin-top: 10px
	& label
		display: inline-block
		width: 120px
		text-align: right
		font-size: 16px
		margin-right: 10px
	& input[type=text], input[type=password], textarea, select
		border: item-border
		-webkit-box-sizing: border-box
		-moz-box-sizing: border-box
		box-sizing: border-box
		width: 244px
		padding: 3px
		font-size: 16px
	& input[type=checkbox]
		// vertical-align: text-top
		margin-right: 5px
		& + label
			width: auto
			text-align: initial
			margin: 0
	.checklist
		display: inline-block
		vertical-align: top
		li
			float: left
			width: 33%
			label
				width: auto
				text-align: initial
				margin: 0
	
.bbcode-content
	background: #F4F4F4
	margin: 20px 0
	color: #999
	font-size: 16px
	& img
		max-width: 656px
		border: item-border
	& strong, b
		font-weight: normal
		color: #333
	& ul, ol
		margin: 0
		padding-left: 20px
	& a
		color: #2DCC6F
		&:hover
			text-decoration: underline
	& p
		margin: 5px 0

.flash
	margin: 10px 0
	padding: 10px
	font-size: 18px
	&-success
		background: #dff0d8
	&-error
		background: #f2dede
	

.logo-list
	padding-top: 20px
	margin-top: 5px
	border-top: item-border
	h2
		font-family: supermarketregular
	ul li
		width: 115px
		float: left
		margin: 10px 0 10px 31px
		&:nth-child(5n+1)
			margin-left: 0
		& .logo-box
			width: 113px
			height: 66px
			overflow: hidden
			border: item-border
			& img
				width: 115px
				position: relative
				top: -1px
				left: -1px
		& .logo-name
			font-size: 18px
			color: #333
			height: 1.1em
			overflow: hidden
			line-height: 1.2em

#search-no-result
	margin: 50px auto
	display: block

#recaptcha_widget_div
	display: inline-block
	vertical-align: top
	margin-left: -3px

#error-image
	display: block
	margin: 160px auto 10px auto

#error-menu
	text-align: center
	li
		display: inline-block
		width: 120px
		border-left: item-border
		&:first-child
			border-left: none
	a
		font-family: oswaldbook
		font-size: 18px
		text-transform: uppercase
		&:hover
			text-decoration: underline

#error-search
	margin: 10px 185px