#offer-list ul, ul.sidebar-offer
	& li
		width: 218px
		border: item-border
		margin: 0 0 20px 20px
		float: left
		overflow: hidden
		background: #F2F2F2
		height:300px
		&:nth-child(3n + 1)
			margin-left: 0
		& .img-box
			width: 220px
			height: 100px 
			overflow: hidden
			border-bottom: item-border
			top: -1px
			left: -1px
			position: relative
			& img
				width: 220px
		& .content-box
			height: 160px
			margin: 0 10px
			& .content-box-top
				height: 122px
			& h2
				font-size: 18px
				max-height: 2.6em
				overflow: hidden
				text-transform: uppercase
				font-family: supermarketregular
			& p
				font-size: 16px
				color: #666
				margin: 5px 0 0 0
				max-height: 4em
				overflow: hidden
				padding-top:5px
			& a
				display: inline-block
				margin-top:5px
				width: 96px
				height: 24px
				background-image: url('../images/offer-button.png')
				&.joys-offer
					background-position: -282px -60px
					margin: 8px 0
					float: left
					&:hover
						background-position: -282px -84px
				&.more-detail
					background-position: -378px -60px
					margin: 8px 0px 8px 6px
					float: left
					&:hover
						background-position: -378px -84px
		& .footer-box
			border-top: item-border
			color: #999
			font-size: 16px
			& div
				height: 30px
				float: left
				width: 70px
				text-align: center
				line-height: 1em
				padding: 3px 0
				border-left: item-border
				&:hover
					color: #666
					& .fa-facebook
						color: #32549C
				&:first-child
					border-left: none
					line-height: 33px
	&.featured li
		margin-left: 0
		width: 698px
		height: 166px
		& .img-box
			width: 365px
			height: 166px 
			overflow: hidden
			border-bottom: none
			border-right: item-border
			top: 0
			left: 0
			float: left
			& img
				width: 365px
		& .content-box
			float: left
			width: 312px
			height: 134px
			& .content-box-top
				height: 94px
			& h2
				font-size: 26px
				padding-top: 5px
			& p
				max-height: 1.3em
				margin-top:-1px
		& .footer-box
			float: left
			width: 332px
			& div
				width: 110px
				line-height: 26px
				& br
					display: none
ul.sidebar-offer li
