.mfp-ajax-holder .mfp-content
	width: 670px
	margin: 0 auto

.coupon
	font-family: Tahoma, san-serif
	font-size: 13px
	color: #999
	background: #FFF
	border-top: 20px solid #2bcb73
	border-bottom: 20px solid #2bcb73
	width: 670px
	@media print
		border-top: 20px solid #333
		border-bottom: 20px solid #333	
	&-top
		padding: 20px
	&-left
		width: 143px
	&-right
		width: 470px
		margin-left: 17px
	&-brand
		width: 115px
		height: 68px
		overflow: hidden
		margin: 0 auto
		img
			width: 115px
	&-link
		color: #2DCC6F
	&-barcode
		margin-top: 15px
	&-title
		font-size: 20px
		color: #333	
		text-transform: uppercase
	&-detail
		background: none
	&-term
		border: 1px solid #333
		background: #F2F2F2
		padding: 8px 10px
		margin-top: 20px
		&-header
			color: #333
		&-body
			margin: 0
			p
				margin: 5px 0
	&-reminder
		margin-top: 20px
	&-bottom
		border-top: 1px solid #333
		color: #333
		& div
			float: left
			padding: 10px
			border-left: 1px solid #333
			border-right: 1px solid #333
			width: 203px
			height: 100%
			text-align: center
			margin-left: -1px
			&:first-child
				border-left: none
			&:last-child
				border-right: none

.print
	display: none

.btn-popup
	background: none
	color: #999
	font-family: Tahoma
	font-size: 16px
	&:hover
		background: none
		color: #FFF

@media print
	& #bs-modal
		overflow: visible
		position: relative
		& .modal-content
			border: none
		& .modal-dialog
			margin: 0 auto
	& .print, .mfp-content
		display: inherit
	& .no-print, .mfp-close, .mfp-preloader
		display: none !important


#btn-recent-coupon, #btn-all-coupon
	margin: 10px 5px 0 0

#all-coupons a
	display: block
	padding: 20px 10px 10px 10px
	border-bottom: item-border
	font-size: 16px
	color: #999
	&:hover
		color: #333
		background: #E9E9E9

#brand-name
	font-family: supermarketregular
	text-transform: none

#brand-logo
	width: 113px
	height: 66px
	border: item-border
	margin: 0 10px 20px 0
	overflow: hidden
	position: relative
	img
		position: relative
		width: 115px
		top: -1px
		left: -1px
*
	-webkit-box-sizing: content-box;