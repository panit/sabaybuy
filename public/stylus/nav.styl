textarea,
input[type="text"],
input[type="button"],
input[type="submit"] {
     -webkit-appearance: none;
     border-radius: 0;
}

.navbar
	min-width: 960px

.navbar-inner 
	padding: 0

#navbar-user 
	background: #E5E5E5
	height: 40px
	& .fa-btn
		margin-top: 7px
		
#navbar-search 
	background: #FFF
	height: 56px

#navbar-menu 
	background: #333
	height: 56px

#navbar-footer 
	background: #333
	padding-top: 20px
	color: #999
	& a
		color: #999
		&:hover
			color: #FFF
			text-decoration: underline

#user-greeting
	display: inline-block
	vertical-align: middle
	text-align: right
	line-height: 1em
	margin: 6px 2px 0 0
	font-size: 13px
	a:hover
		text-decoration: underline

#user-image
	width: 26px
	height: 26px
	margin-top: 6px

#user-sep
	display: inline-block
	border-right: 1px solid #333
	height: 26px
	vertical-align: middle
	margin: 6px 9px 0 6px

#logo
	padding-top: 12px
	a:hover
		img
			opacity: 1

#search-box 
	margin-top: 9px
	& input
		font-family: oswaldlight
		font-size: 12px
		text-transform: uppercase
		border: solid 1px #E5E5E5
		padding: 8px 11px
		width: 248px
		vertical-align: bottom
	& .select2-container
		font-family: oswaldlight
		font-size: 12px
		text-transform: uppercase
		width: 272px
		& .select2-choice
			padding: 3px 0 3px 8px
			background: none
			border: item-border
			border-radius: 0
			& > .select2-chosen
				color: #A9A9A9
		& .select2-arrow
			background: none
			border-left: item-border
	& input[type=submit]
		color: #333
		text-align: center
		vertical-align: bottom
		display: inline-block
		width: 40px
		height: 34px
		border: none
		font-family: FontAwesome
		font-size: 22px
		padding: 0px
		-webkit-appearance: none;
		-webkit-border-radius: 0;
.select2-results
	font-size: 16px
.select2-drop-active
	border: item-border
#navbar-link
	padding-right: 10px
	padding-top: 13px
	display: inline-block
	& a
		color: #999
		&:hover
			color: #666

.navbar-link-sep
	border-right: 1px solid #999
	margin: 0 5px 0 3px

#menu-box
	color: #2DCC70
	background: #333
	font-family: oswaldbook
	font-size: 20px
	text-transform: uppercase
	position: relative
	list-style: none
	margin: 0
	& > li
		float: left
		&:not(:last-child) > span
			border-right: 1px solid rgba(255,255,255,0.3)
		& > span
			display: block
			padding: 14px
			cursor: pointer
		& > div
			padding: 0
			background: rgba(51,51,51,0.9)
			position: absolute
			display: none
			width: 257px
			top: 56px
			right: 0px
			z-index: 1
			font-size: 14px
			& > img
				display: block
			& .full-menu li
				display: block
				margin: 11px 0 0 15px
			& .half-menu
				border-top: 1px solid #FFF
				margin-top: 6px
				padding: 9px 15px 0 15px
				& li
					width: 113px
					margin-bottom: 17px
					float: left
			& a
				color: #FFF
				&:hover
					color: #2DCC6F
		&:hover
			color: #FFF
		&.open
			& > div
				display: block
				-webkit-animation-name: fadeInDown
				animation-name: fadeInDown
				-webkit-animation-duration: 0.5s;
				animation-duration: 0.5s;
				-webkit-animation-fill-mode: both;
				animation-fill-mode: both;

.menu-btn
	display: inline-block
	padding: 14px
	color: #2DCC70
	background: #333
	font-family: oswaldbook
	font-size: 20px
	text-transform: uppercase
	&:hover
		color: #FFF

.fa-btn
	display: inline-block
	color: #FFF
	font-family: oswaldbook
	font-size: 14px
	text-transform: uppercase
	& span
		padding: 3px 10px 0 5px
		display: inline-block
		height: 21px
		vertical-align: middle
	&:hover
		color: #FFF
		& .fa, span
			background: #111
	& .fa, span
		background: #333
	& .fa 
		display: inline-block
		width: 25px
		height: 19px
		padding-top: 5px
		text-align: center
		vertical-align: middle
		border-right: 1px solid #FFF
		border-right: 1px solid rgba(255, 255, 255, 0.3)
		margin-right: -2px

#footer-contact
	font-family: oswaldbook
	color: #FFF
	& .tel
		margin-top: 5px
		font-size: 20px
	& .work-time
		font-size: 12px
	& .social-network
		margin-top: 2px
		& a
			margin-right: 5px
			&:hover
				text-decoration: none

#footer-subscribe
	margin-top: 10px
	& input
		font-family: oswaldbook
		height: 25px
		text-transform: uppercase
		border-top: 1px solid #3D3D3D
		border-right: 1px solid #3D3D3D
		border-bottom: 1px solid #3D3D3D
		border-left: none
		font-size: 11px
		&[type=submit]
			color: #FFF
			height: 25px
			width: 80px
			padding: 0
			margin: 0
		&[type=text]
			padding: 0 5px;
			margin: 0 0 0 -3px;
			width: 220px

#footer-links
	& > li
		margin-left: 15px
		width: 180px
		& > div
			font-size: 12px
			background: #717171
			text-transform: uppercase
			padding: 5px 10px
			font-family: oswaldbook
			color: #333
			margin-bottom: 4px
		& > ul > li
			float: left
			width: 85px
			margin-top: 6px

#footer-copyright
	padding: 25px 0

@keyframes fadeInDown 
	0% 
		opacity: 0
		-webkit-transform: translateY(-20px)
		-ms-transform: translateY(-20px)
		transform: translateY(-20px)

	100% 
		opacity: 1
		-webkit-transform: translateY(0)
		-ms-transform: translateY(0)
		transform: translateY(0)
  
