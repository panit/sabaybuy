#profile-image
	border: item-border
	width: 148px
	height: 148px
	overflow: hidden
	position: relative
	margin-right: 20px
	img
		width: 150px
		position: relative
		top: -1px
		left: -1px
#profile-text
	width: 488px
	font-size: 18px

.activity-list
	margin: 20px 0
	.activity-list-header
		font-size: 18px
	li
		padding: 10px 0 10px 10px 
		font-size: 16px
		color: #999
		border-bottom: item-border
		&:hover
			color: #333
			background: #f4f4f4
		.activity-list-detail
			display: inline-block
			width: 630px
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
			vertical-align: text-top
			a
				color: #333
				&:hover
					text-decoration: underline
		.activity-list-time
			display: inline-block
			padding-left: 20px
			color: #b02417